\begin_layout Enumerate

\series bold
(100 pts)
\series default
 Calcule el cambio en el vector de pesos 
\begin_inset Formula $\Delta\overrightarrow{w}\left(t\right)$
\end_inset

, usado para actualizar el vector de pesos, según el 
\series bold
algoritmo del descenso del gradiente
\series default
, con la ecuación:
\begin_inset Formula 
\[
\overrightarrow{w}\left(t\text{+}1\right)=\overrightarrow{w}\left(t\right)+\Delta\overrightarrow{w}\left(t\right)
\]

\end_inset

 para la siguiente función: 
\begin_inset Formula 
\[
E\left(\overrightarrow{w}\left(t\right)\right)\text{=}-\sum_{i=1}^{n}y_{i}\ln\left(w_{i}\left(t\right)\right)
\]

\end_inset

donde 
\begin_inset Formula $\overrightarrow{w}\left(t\right)\in\mathbb{R}^{n}$
\end_inset

 , y recuerde que 
\begin_inset Formula $\overrightarrow{w}\left(t\right)=\left[w_{1}\left(t\right),\ldots w_{i}\left(t\right),\ldots,w_{n}\left(t\right)\right]^{T}$
\end_inset

.
 El vector 
\begin_inset Formula $\overrightarrow{y}\in\mathbb{R}^{n}$
\end_inset

 es un vector de constantes conocidas: 
\begin_inset Formula $\overrightarrow{y}=\left[y_{1},\ldots y_{i},\ldots,y_{n}\right]^{T}$
\end_inset

.
 Exprese el resultado detallando los valores de los componentes del vector
 resultante.
 
\end_layout

\begin_deeper
\begin_layout Standard

\color blue
Solución
\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula ${\textstyle E\left(\overrightarrow{w}\left(t\right)\right)\text{=}-\sum_{i=1}^{n}y_{i}\ln\left(w_{i}\left(t\right)\right)=-[y_{1}\ln\left(w_{1}\left(t\right)\right)+y_{2}\ln\left(w_{2}\left(t\right)\right)+\cdots+y_{n}\ln\left(w_{n}\left(t\right)\right)]}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\nabla_{\overrightarrow{w}\left(t\right)}E\left(\overrightarrow{w}\left(t\right)\right)=\left[\begin{array}{c}
\frac{\partial[-[y_{1}\ln\left(w_{1}\left(t\right)\right)+y_{2}\ln\left(w_{2}\left(t\right)\right)+\cdots+y_{n}\ln\left(w_{n}\left(t\right)\right)]]}{\partial w_{1}}\\
\frac{\partial[-[y_{1}\ln\left(w_{1}\left(t\right)\right)+y_{2}\ln\left(w_{2}\left(t\right)\right)+\cdots+y_{n}\ln\left(w_{n}\left(t\right)\right)]]}{\partial w_{2}}\\
\vdots\\
\frac{\partial[-[y_{1}\ln\left(w_{1}\left(t\right)\right)+y_{2}\ln\left(w_{2}\left(t\right)\right)+\cdots+y_{n}\ln\left(w_{n}\left(t\right)\right)]]}{\partial w_{n}}
\end{array}\right]=\left[\begin{array}{c}
-y_{1}\frac{1}{w_{1}\left(t\right)}w_{1}^{\prime}\left(t\right)\\
-y_{2}\frac{1}{w_{2}\left(t\right)}w_{2}^{\prime}\left(t\right)\\
\vdots\\
-y_{n}\frac{1}{w_{n}\left(t\right)}w_{n}^{\prime}\left(t\right)
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Cambio en el vector de pesos 
\begin_inset Formula $\Delta\overrightarrow{w}\left(t\right)$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\Delta\overrightarrow{w}\left(t\right)=\nabla_{\overrightarrow{w}\left(t\right)}E\left(\overrightarrow{w}\left(t\right)\right)=\left[\begin{array}{c}
-y_{1}\frac{1}{w_{1}\left(t\right)}w_{1}^{\prime}\left(t\right)\\
-y_{2}\frac{1}{w_{2}\left(t\right)}w_{2}^{\prime}\left(t\right)\\
\vdots\\
-y_{n}\frac{1}{w_{n}\left(t\right)}w_{n}^{\prime}\left(t\right)
\end{array}\right]$
\end_inset


\end_layout

\end_deeper
