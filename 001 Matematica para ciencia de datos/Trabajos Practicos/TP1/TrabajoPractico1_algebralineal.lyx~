\begin_layout Enumerate

\series bold
(15 puntos)
\series default
\lang english
 Demuestre que la siguiente ecuación matricial: 
\color blue

\begin_inset Formula 
\[
\left\Vert A\:\vec{x}-\vec{b}\right\Vert ^{2}-\left\Vert \vec{b}\right\Vert ^{2}
\]

\end_inset

con 
\begin_inset Formula $\overrightarrow{x}\in\mathbb{R}^{n}$
\end_inset

, 
\begin_inset Formula $\overrightarrow{b}\in\mathbb{R}^{m}$
\end_inset

 y 
\begin_inset Formula $A\in\mathbb{R}^{m\times n},$
\end_inset

se puede reescribir como sigue: 
\begin_inset Formula 
\[
\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}A\,\vec{x}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Standard

\color blue
\lang english
Sean:
\end_layout

\begin_layout Standard
\align center

\color blue
\lang english
\begin_inset Formula $\overrightarrow{x}=\left[\begin{array}{c}
x_{1}\\
\vdots\\
x_{n}
\end{array}\right]$
\end_inset

 ; 
\begin_inset Formula $\overrightarrow{b}=\left[\begin{array}{c}
b_{1}\\
\vdots\\
b_{m}
\end{array}\right]$
\end_inset

 ; 
\begin_inset Formula $A=\left[\begin{array}{ccc}
a_{1,1} & \cdots & a_{1,n}\\
\vdots & \ddots & \vdots\\
a_{m,1} & \cdots & a_{m,n}
\end{array}\right]=\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}} & --
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
Primero calculamos 
\begin_inset Formula $A\overrightarrow{x}-\overrightarrow{b}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $A\overrightarrow{x}-\overrightarrow{b}=\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}} & --
\end{array}\right]\left[\begin{array}{c}
x_{1}\\
\vdots\\
x_{n}
\end{array}\right]-\left[\begin{array}{c}
b_{1}\\
\vdots\\
b_{m}
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $A\overrightarrow{x}-\overrightarrow{b}=\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x} & --
\end{array}\right]-\left[\begin{array}{c}
b_{1}\\
\vdots\\
b_{m}
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $A\overrightarrow{x}-\overrightarrow{b}=\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x}-b_{1} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x}-b_{m} & --
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||=\sqrt{\left(\overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x}-b_{1}\right)^{2}+\cdots+\left(\overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x}-b_{m}\right)^{2}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}=\left(\overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x}-b_{1}\right)^{2}+\cdots+\left(\overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x}-b_{m}\right)^{2}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}=\mathop{\mathop{\stackrel[i=1]{m}{\sum}\left(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x}-b_{i}\right)^{2}}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}=\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i}+b_{i}^{2})}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
Luego tenemos 
\begin_inset Formula $\left\Vert \vec{b}\right\Vert ^{2}$
\end_inset

que
\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $\left\Vert \vec{b}\right\Vert ^{2}=\stackrel[i=1]{m}{\sum}b_{i}^{2}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
Por lo que 
\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}-\left\Vert \vec{b}\right\Vert ^{2}=\mathop{\mathop{\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i}+b_{i}^{2})}}}-\stackrel[i=1]{m}{\sum}b_{i}^{2}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}-\left\Vert \vec{b}\right\Vert ^{2}=\mathop{\mathop{\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i})+\cancel{\stackrel[i=1]{m}{\sum}b_{i}^{2}}}}}-\cancel{\stackrel[i=1]{m}{\sum}b_{i}^{2}}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}-\left\Vert \vec{b}\right\Vert ^{2}=\mathop{\mathop{\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i})}}}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Ahora debemos comprobar que
\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax\,\vec{=||A\overrightarrow{x}-\overrightarrow{b}||^{2}-||\overset{\rightarrow}{b}||^{2}=\mathop{\mathop{\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i})}}}}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Sean:
\end_layout

\begin_layout Standard
\align center

\color blue
\begin_inset Formula $\overrightarrow{x}^{T}=\left[\begin{array}{ccc}
x_{1} & \cdots & x_{n}\end{array}\right]$
\end_inset

 ; 
\begin_inset Formula $\overrightarrow{b}^{T}=\left[\begin{array}{ccc}
b_{1} & \cdots & b_{m}\end{array}\right]$
\end_inset

 ; 
\begin_inset Formula $A^{T}=\left[\begin{array}{ccc}
| & \cdots & |\\
\overrightarrow{a_{1,:}} & \cdots & \overrightarrow{a_{m,:}}\\
| & \cdots & |
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Tenemos que 
\begin_inset Formula $\vec{x}^{T}\,A^{T}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}=\left[\begin{array}{ccc}
x_{1} & \cdots & x_{n}\end{array}\right]\left[\begin{array}{ccc}
| & \cdots & |\\
\overrightarrow{a_{1,:}} & \cdots & \overrightarrow{a_{m,:}}\\
| & \cdots & |
\end{array}\right]=\left[\begin{array}{ccc}
\overrightarrow{x}^{T}\overrightarrow{a_{1,:}} & \cdots & \overrightarrow{x}^{T}\overrightarrow{a_{m,:}}\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Tenemos que 
\begin_inset Formula $A\overrightarrow{x}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $A\overrightarrow{x}=\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x} & --
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Por lo que 
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}=\left[\begin{array}{ccc}
\overrightarrow{x}^{T}\overrightarrow{a_{1,:}} & \cdots & \overrightarrow{x}^{T}\overrightarrow{a_{m,:}}\end{array}\right]\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x} & --
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}=\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x}+...+\overrightarrow{x}^{T}\overrightarrow{a_{m,:}}\overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Se observa que 
\begin_inset Formula $\overrightarrow{x}^{T}\cdot\overrightarrow{a_{1,:}}=\overrightarrow{a_{1,:}}\cdot\overrightarrow{x}$
\end_inset

,por lo tanto
\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}=\stackrel[i=1]{m}{\sum}\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Luego para 
\begin_inset Formula $2\,\vec{b}^{T}Ax$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $2\,\vec{b}^{T}Ax=2\left[\begin{array}{ccc}
b_{1} & \cdots & b_{m}\end{array}\right]\left[\begin{array}{ccc}
-- & \overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x} & --\\
-- & \vdots & --\\
-- & \overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x} & --
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $2\,\vec{b}^{T}Ax=2\left[b_{1}(\overrightarrow{a_{1,:}^{T}}\cdot\overrightarrow{x})+...+b_{m}(\overrightarrow{a_{m,:}^{T}}\cdot\overrightarrow{x})\right]=\stackrel[i=1]{m}{\sum}2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Uniendo la ecuación completa 
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax$
\end_inset

 se tiene que 
\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-\stackrel[i=1]{m}{\sum}2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}(\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x}))$
\end_inset


\end_layout

\begin_layout Standard

\color blue
Por lo tanto se comprueba que 
\begin_inset Formula $\left\Vert A\:\vec{x}-\vec{b}\right\Vert ^{2}-\left\Vert \vec{b}\right\Vert ^{2}$
\end_inset

 se puede reescribir como 
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax$
\end_inset

 
\end_layout

\begin_layout Standard

\color blue
\lang english
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}-\left\Vert \vec{b}\right\Vert ^{2}=\mathop{\mathop{\mathop{\mathop{\stackrel[i=1]{m}{\sum}((\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})^{2}-2(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})b_{i})}}}}$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-\stackrel[i=1]{m}{\sum}2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x})$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=(\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x}))$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}(\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x}))$
\end_inset


\end_layout

\begin_layout Standard

\color blue
\begin_inset Formula $||A\overrightarrow{x}-\overrightarrow{b}||^{2}-\left\Vert \vec{b}\right\Vert ^{2}=\vec{x}^{T}\,A^{T}A\:\vec{x}-2\,\vec{b}^{T}Ax=\stackrel[i=1]{m}{\sum}(\left(\overrightarrow{x}^{T}\overrightarrow{a_{1,:}}\right)^{2}-2b_{i}(\overrightarrow{a_{i,:}^{T}}\cdot\overrightarrow{x}))$
\end_inset


